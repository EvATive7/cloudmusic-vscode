{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "module": "esnext",
    "moduleResolution": "node16",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true, // https://github.com/sindresorhus/got/issues/2051
    "strict": true,
    "target": "ES2022"
  },
  "include": ["src"]
}
